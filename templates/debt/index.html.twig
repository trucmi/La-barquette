{% extends 'base.html.twig' %}
{% block body %}
<section class="login first grey">
    <div class="container">
        <div class="box-wrapper">
            <div class="box box-border">
                <div class="box-body">
                    <h4>Nouvelle dette</h4>
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_row(form.giver) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.receiver) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.nameDebtType) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.debtDeadline) }}
                    </div>
                    <div class="form-group text-right">
                        <button class="btn btn-primary btn-block" type="submit">Send the debt</button>
                    </div>
                    {{ form_end(form) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
